# Help Scout OAuth2 App Credentials (required)
HELPSCOUT_APP_ID=your-app-id-here
HELPSCOUT_APP_SECRET=your-app-secret-here

HELPSCOUT_BASE_URL=https://api.helpscout.net/v2/

# Optional Configuration
REDACT_MESSAGE_CONTENT=false
CACHE_TTL_SECONDS=300
LOG_LEVEL=info

# Reply paragraph spacing style: "relaxed" (default, extra space around lists/quotes)
# or "compact" (tighter spacing, block elements use only their native margins)
HELPSCOUT_REPLY_SPACING=relaxed

# Safety: Set to true to allow sending published (non-draft) replies
# When false (default), only draft replies can be created
HELPSCOUT_ALLOW_SEND_REPLY=false
